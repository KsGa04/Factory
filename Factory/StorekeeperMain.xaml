<Window x:Class="Factory.StorekeeperMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory"
        mc:Ignorable="d"
        Title="StorekeeperMain" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#e0a9af" BorderThickness="2" Grid.Row="0"/>
        <Label Content="Кладовщик" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Выход" Background="#e0a9af" Width="100" Height="30" Margin="10" x:Name="Authorization" Click="Authorization_Click"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Список тканей" Margin="10" x:Name="fabric_list" Click="Fabric_list_Click"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Список фурнитуры" Margin="60" Click="Furniture_list_Click"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Поступление тканей" Margin="110"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Поступление фурнитуры" Margin="160"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Инвентаризация" Margin="0, 210, 0, 0"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Списание остатков тканей" Margin="0, 260, 0, 0"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#e0a9af" Width="250" Height="40" FontSize="15" Content="Списание остатков фурнитуры" Margin="0, 310, 0, 0"/>
    </Grid>
</Window>
